@model SagarMobileShopy.Models.AdminLogin
@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <style>
        .icon {
            color: #3d7dea;
        }

        body {
            background-color: rgb(240, 240, 240);
        }

        #GFG {
            text-decoration: none;
            font-size: 17px;
            color: #06c;
        }
    </style>

</head>

<body class="" style="font-family:Calibri, sans-serif; min-height: 375.391px;">
    <div class="container mt-5 p-5">
        <div class="row ">
            <div class="col-12 col-sm-8 col-md-5 m-auto">
                <div class="card border-0 shadow-lg p-3 mb-5 bg-white rounded">
                    <div class="card-body">
                        <div class="icon">
                            <center>
                                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                                </svg>
                            </center>
                        </div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4 class="text-center"><b>Please sign in.</b></h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-12 mb-2">
                                <label><b>User Name </b></label> <br />
                                @Html.EditorFor(model => model.A_UserName, new { htmlAttributes = new { @class = "form-control form-control-sm ", placeholder = "User Name or Email Id" } })
                                @Html.ValidationMessageFor(model => model.A_UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 mb-2">
                                <label><b>Password </b></label> <br>
                                @Html.EditorFor(model => model.A_Password, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "Password" } })
                                @Html.ValidationMessageFor(model => model.A_Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="mb-2">
                            <a id="GFG" href="#"><small>Forgot your MobileShopy ID or Password</small></a>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckCheckedDisabled" checked disabled>
                            <label class="form-check-label" for="flexCheckCheckedDisabled">
                                Remember Me
                            </label>
                        </div>
                        <div class="form-group mb-2">
                            <div class="d-grid">
                                <input type="submit" value="Login" class="btn btn-primary btn-block btn-sm" />
                            </div>
                        </div>
                        <div class="text-center">Don't have an account? <a style="text-decoration:none" href="/Home/Registration">Sign Up here</a></div>
                    </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
